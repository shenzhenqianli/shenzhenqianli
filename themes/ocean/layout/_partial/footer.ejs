<footer class="footer">
  <div class="outer">
    <ul class="list-inline">
      <li><%= config.title %> &copy; <%= date(new Date(), 'YYYY') %></li>
      <% if (theme.beian){ %>
        <li>
          <%if (theme.beian.url){ %>
            <a href="<%- url_for(theme.beian.url) %>" target="_blank"><%- theme.beian.number %></a>
            <% } else { %>
              <%- theme.beian.number %>
          <% } %>
        </li>
      <% } %>
    </ul>
    <p><%- partial('post/busuanzi') %></p>
  </div>
</footer>